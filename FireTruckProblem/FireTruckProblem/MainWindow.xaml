<Window x:Class="FireTruckProblem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FireTruckProblem"
        mc:Ignorable="d"
        Title="Find Shortest Route" Height="450" Width="800" Background="MediumPurple">
    <!-- Final Project, Dec 4/18-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="ImportAndRun" Content="Import file and find routes"  Click="ImportAndRun_Click" Margin="15" FontSize="25"></Button>
        <ListBox Grid.Row="1" ItemsSource="{Binding Output}" Margin="15" FontSize="20"></ListBox>
        <Button Grid.Row="2" Name="Save" Content="Save to file"  Click="Save_Click" Margin="15" FontSize="25"></Button>
    </Grid>
</Window>
